@model DictionaryUI.DTO.WordsDTO

@{
    Layout = "_Layout";
}

<h2 class="text-center text-info my-4 fw-bold">Word Details</h2>

<div class="container col-md-6">
    <div class="card shadow-sm p-4">

        <div class="mb-3">
            <label class="fw-bold">Word</label>
            <div class="form-control bg-light">@Model.Word</div>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Definition</label>
            <div class="form-control bg-light">@Model.Definition</div>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Type</label>
            <div class="form-control bg-light">@Model.Type</div>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Example</label>
            <div class="form-control bg-light">@Model.Example</div>
        </div>

        <div class="text-center">
            <a asp-action="Update" asp-route-id="@Model.Id"
               class="btn btn-primary me-2">Edit</a>

            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>

    </div>
</div>