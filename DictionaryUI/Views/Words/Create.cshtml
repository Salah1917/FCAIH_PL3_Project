@using DictionaryUI.DTO
@model WordsDTO

@{
    Layout = "_Layout";
}

<h2 class="text-center text-info my-4 fw-bold">Create New Word</h2>

<div class="container col-md-6">
    <div class="card shadow-sm p-4">
        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label asp-for="Word" class="form-label fw-bold"></label>
                <input asp-for="Word" class="form-control form-control-lg" />
            </div>

            <div class="mb-3">
                <label asp-for="Definition" class="form-label fw-bold"></label>
                <textarea asp-for="Definition"
                          class="form-control form-control-lg"
                          rows="4"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label fw-bold"></label>
                <select asp-for="Type"
                        class="form-select form-select-lg"
                        asp-items="Html.GetEnumSelectList<WordType>()">
                </select>
            </div>


            <div class="mb-3">
                <label asp-for="Example" class="form-label fw-bold"></label>
                <textarea asp-for="Example"
                          class="form-control form-control-lg"
                          rows="3"></textarea>
            </div>

            <div class="text-center">
                <button class="btn btn-primary btn-lg px-5">Create</button>
            </div>
        </form>
    </div>
</div>